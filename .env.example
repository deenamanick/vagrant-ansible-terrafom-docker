# Copy to .env and fill values
# Required
GITHUB_REPO=owner/repo

# Provide ONE of the following
# Option 1 (recommended): short-lived registration token generated from GitHub UI
RUNNER_TOKEN=

# Option 2: PAT with permission to create runner registration token
# (Repo-level runner: repo scope; Org-level needs org admin permissions)
GITHUB_PAT=

# Optional
RUNNER_NAME=
RUNNER_LABELS=self-hosted,runner,vm
RUNNER_WORKDIR=_work
